{
  "$schema": "./schema.json",
  "rust": {
    "name": "Rust",
    "type": "rust",
    "fileMatch": ["Cargo.toml", "Cargo.lock"],
    "commands": ["cargo build", "cargo run", "cargo test", "cargo check"],
    "command_alias": {
      "build": "cargo build",
      "run": "cargo run",
      "test": "cargo test",
      "check": "cargo check"
    }
  },
  "go": {
    "name": "Go",
    "type": "go",
    "fileMatch": ["go.mod", "go.sum"],
    "commands": ["go build", "go run", "go test"],
    "command_alias": {
      "build": "go build",
      "run": "go run",
      "test": "go test"
    }
  },
  "python": {
    "name": "Python",
    "type": "python",
    "fileMatch": ["requirements.txt", "Pipfile", "Pipfile.lock"],
    "commands": [
      "python3 -m pip install -r requirements.txt",
      "python3 -m pipenv install",
      "python3 -m pipenv run python3",
      "python3 -m pipenv run python3 -m pytest"
    ],
    "command_alias": {
      "install": "python3 -m pip install -r requirements.txt",
      "install-dev": "python3 -m pipenv install",
      "run": "python3 -m pipenv run python3",
      "test": "python3 -m pipenv run python3 -m pytest"
    }
  },
  "flutter": {
    "name": "Flutter",
    "type": "flutter",
    "fileMatch": ["pubspec.yaml"],
    "commands": ["flutter pub get", "flutter run", "flutter test"],
    "command_alias": {
      "install": "flutter pub get",
      "run": "flutter run",
      "test": "flutter test",
      "clean": "flutter clean"
    }
  }
}
